---
import Layout from '../layouts/Layout.astro';
import SoftDivider from '../components/SoftDivider.astro';
---

<Layout title="Thirty Days">
  <main style="text-align: center;">
	
    <h1 class="stagger-1">Welcome</h1>
    <h2 class="stagger-2" style="font-size: 1.4rem; font-weight: normal; opacity: 0.8;">
      A journey of thirty days.
    </h2>
    <div class="stagger-3">
        <SoftDivider />
        <a href="/days" class="btn-primary" style="padding: 12px 40px; font-size: 1.1rem; text-decoration: none;">
            Begin
        </a>
		
    </div>
	
  </main>
</Layout>