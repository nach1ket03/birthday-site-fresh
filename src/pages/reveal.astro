---
// src/pages/reveal.astro
import Layout from '../layouts/Layout.astro';
import BirthdayCelebration from '../components/BirthdayCelebration.jsx';
---

<Layout title="Happy Birthday!">
  <main style="
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    justify-content: center; 
    min-height: 60vh;
  ">
    
    <BirthdayCelebration client:only="react" />

    <div style="margin-top: 60px; text-align: center; animation: fadeUp 1s 0.8s forwards; opacity: 0;">
        <a href="/" style="font-size: 0.9rem; opacity: 0.6; text-decoration: none;">
          &larr; Return Home
        </a>
    </div>

  </main>
</Layout>